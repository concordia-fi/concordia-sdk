{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "module": "commonjs",
    "target": "esnext",
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowJs": true,
    "preserveConstEnums": true,
    "declarationMap": true,
    "composite": true,
    "sourceMap": true
  },
  "references": [{ "path": "../payload" }],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
